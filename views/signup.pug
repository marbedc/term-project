doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(href="https://fonts.googleapis.com/css2?family=Roboto&display=swap", rel="stylesheet")
    link(href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Dancing+Script:wght@400..700&family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&family=Oswald:wght@200..700&family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Roboto+Flex:opsz,wght@8..144,100..1000&display=swap", rel="stylesheet")
    link(rel="stylesheet", href="/public/styles/signUp-style.css")
    title SignUp | Lorem
  body
    nav.navbar
      .title
        span Lorem
        input#search(type="text", name="search", placeholder="Type Something")
      ul.nav-links
        li: a(href="#") Home
        li: a(href="#") Products
        li: a(href="#") About
        li: a(href="#") FAQ

    form.signin-form
      .title
        h2 LOREM SIGNUP

      input.form-input(type="text", id="first-name", name="first-name", placeholder="First Name", required)
      input.form-input(type="text", id="last-name", name="last-name", placeholder="Last Name", required)
      input.form-input(type="date", id="date-of-birth", name="date-of-birth", placeholder="Date Of Birth", required)
      input.form-input(type="text", id="email", name="email", placeholder="Email", required)
      input.form-input(type="password", id="password", name="password", placeholder="Password", required)

      .btn-signIn
        button CREATE ACCOUNT
        label
          | Already have an accout?
          strong
            u
              a(href="/login") Log In
