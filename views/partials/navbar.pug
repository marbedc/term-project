nav.navbar
  .navbar-left
    a(href='/')
      img.logo(src='/images/logo.png' alt='Stellar Logo')
      span.logo-text Stellar
    form.search-form(action='/search' method='GET')
      input#search(type='text' name='q' placeholder='Search products...')
      button#search-btn(type='submit')
        img(src='/images/search-white.png' alt='Search' class='search-icon')

  .navbar-right
    ul.nav-links
      li
        a(href='/profile' class='profile-link')
          img.profile-icon(src='/images/profile-white.png' alt='Profile')
          span.profile-text Profile
      li
        a(href='/cart' class='cart-link')
          img.cart-icon(src='/images/cart-white.png' alt='Cart')
          span.cart-text Cart